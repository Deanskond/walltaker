<div id="<%= dom_id link %>">
  <p>
    <strong>Expires:</strong>
    <% if link.expires <= Time.now.utc %>
      <%= link.expires.strftime '%A %e %b at %I:%M%p' %> ⚠️ Expired
    <% else %>
      in <%= time_ago_in_words link.expires %>
    <% end %>
  </p>

  <p>
    <strong>Blacklist:</strong>
    <%= '⚠️ No Blacklisted Tags' if link.blacklist == '' %>
    <%= link.blacklist %>
  </p>

  <p>
    <strong>Terms:</strong>
    <% if link.terms == '' %>
      ⚠️ No Terms
    <% else %>
    <blockquote>
      <%= link.terms %>
    </blockquote>
  <% end %>
  </p>

  <% if link.last_ping %>
    <p>
      <% if link.last_ping.after? (Time.now.utc - 1.minute) %>
        <strong class="online">Online</strong>
      <% else %>
        <strong class="offline">Offline (>1min since last ping)</strong>
      <% end %>
    </p>
  <% end %>

</div>
